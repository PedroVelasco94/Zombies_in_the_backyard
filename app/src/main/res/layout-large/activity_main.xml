<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pedrovelasco.zombiesinthebackyard.MainActivity"
    android:background="@color/background">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/buttonMenuP"
        android:id="@+id/buttonStart"
        android:onClick="pulsar"
        android:textColor="#fff"
        android:background="@drawable/buton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_above="@+id/buttonStart"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:src="@drawable/logo" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/buttonmenuhtp"
        android:id="@+id/button4"
        android:onClick="pulsarH"
        android:textColor="#fff"
        android:background="@drawable/buton"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imageView" />

</RelativeLayout>
